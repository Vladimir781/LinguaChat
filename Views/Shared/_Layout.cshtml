<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Chat</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Chat.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/GeneralStyle.css" asp-append-version="true" />
</head>
<body>
    @{
        Html.RenderPartial("~/Views/Shared/_Header.cshtml");
    }


 
            @RenderBody()

    <footer class="border-top footer text-muted py-2 d-flex justify-content-center align-items-center">
        <div class="container text-center">
            <span>&copy; 2023 - Chat - </span>
            <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-decoration-none text-white">
                <i class="bi bi-shield-lock"></i> Privacy
            </a>
        </div>
    </footer>
    <!-- Подключение Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    <style>
        footer.border-top {
            border-color: #ccc;
        }
    </style>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
